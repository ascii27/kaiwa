{
  "name": "@kaiwa/server",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --esm --respawn --transpile-only --require tsconfig-paths/register src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\""
  },
  "dependencies": {
    "@kaiwa/shared": "workspace:*",
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.7.1",
    "pino": "^8.16.1",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.3.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prisma": "^5.6.0",
    "prettier": "^3.1.1",
    "ts-node-dev": "^2.0.0",
    "supertest": "^6.3.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vitest": "^0.34.6"
  }
}
